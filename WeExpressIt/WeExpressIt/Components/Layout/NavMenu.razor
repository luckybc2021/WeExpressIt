@using VUI
@rendermode InteractiveServer

<VUIText Display="block"
         Normal_BackgroundColor="#CFE5E5"
         MouseEnter_BackgroundColor="#CFE5E5"
         Clicked_BackgroundColor="#CFE5E5"
         FontFamily="Freestyle Script"
         FontSize="32px" 
         FontWeight="bold"
         Padding="0 0 0 30px">
    We Express VUI
</VUIText>

<VUIList Normal_BackgroundColor="#526A6B"
         MouseEnter_BackgroundColor="#526A6B"
         Clicked_BackgroundColor="#526A6B"
         Normal_Color="#ffffff"
         MouseEnter_Color="#ff00ff"
         Clicked_Color="#ffffff"
         FontFamily="Freestyle Script"
         FontSize="24px"
         Items=@parts />

@code
{
    private string[] parts =
    [
        "Getting Started Guide",
        "API Reference",
        "Examples and Tutorials",
        "Configuration and Options",
        "Troubleshooting and FAQs",
        "Release Notes and Changelog",
    ];
}
