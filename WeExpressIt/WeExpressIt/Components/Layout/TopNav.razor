@using VUI
@rendermode InteractiveServer

<VUILine Items=@input 
         Width="100%" 
         Normal_BackgroundColor="#CFE5E5"
         MouseEnter_BackgroundColor="#CFE5E5"
         Clicked_BackgroundColor="#CFE5E5"
         
         Normal_Color="#000000"
         MouseEnter_Color="#FF00FF"
         Clicked_Color="#FF00FF"

         FontFamily="Freestyle Script"
         FontSize="32px"
         
         Align="Children top-center"/>   

@code {
    private string[] input = ["Donation", "About"];

    private void OnClick(VUIElement e)
    {
        var t = (VUIText)e;
        Console.WriteLine($"Clicked {t.Content}");
    }
}
